@model RegisterViewModel

<form class="form-signin" asp-controller="Register" asp-action="DoRegistrantion" method="post">
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
    <input asp-for="usuario" class="form-control" />
    <span asp-validation-for="usuario" class="text-danger"></span>
    <input asp-for="senha" class="form-control" />
    <span asp-validation-for="senha" class="text-danger"></span>
    <input asp-for="senhaConfirmacao" class="form-control" />
    <span asp-validation-for="senhaConfirmacao" class="text-danger"></span>
    
    <select asp-for="perfil" class="form-control">
        <option value="Gestor">Gestor</option>
        <option value="Operador">Operador</option>
        
    </select>

    <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Incluir Novo Usuário</button>
</form>