@model ProfileViewModel

<h1 class="mt-5">Profile</h1>

<form asp-controller="Profile" asp-action="Update" method="post">
    <div class="form-group row">
        <label asp-for="usuario" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="usuario" class="form-control">
            <span asp-validation-for="usuario" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="senha" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="senha" class="form-control">
            <span asp-validation-for="senha" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="senhaConfirmacao" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="senhaConfirmacao" class="form-control">
            <span asp-validation-for="senhaConfirmacao" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>